{
  "npm.binPath": "pnpm",
  "tsserver.npm": "pnpm",
  "eslint.packageManager": "pnpm",
  "eslint.autoFixOnSave": true,
  "coc.preferences.colorSupport": true,
  "highlight.colors.enable": true,
  "highlight.document.enable": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.enableVimDevicons": true,
  "explorer.datetime.format": "yy/MM/dd HH:mm:ss",
  "coc.preferences.formatOnSaveFiletypes": [
    "reason",
    "rescript"
  ],
  "html.enable": true,
  "html.filetypes": [
    "html",
    "handlebars",
    "htmldjango",
    "blade",
    "markdown",
    "reason",
    "rescript",
    "javascriptreact",
    "typescriptreact"
  ],
  "languageserver": {
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    },
    "rescript": {
      "enable": true,
      "modules": "~/.vim/plugged/vim-rescript/rescript-vscode/extension/server/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["rescript"],
      "rootPatterns": ["bsconfig.json"]
    }
  },
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck",
    "bash": "shellcheck"
  }
}
