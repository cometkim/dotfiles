{
  "npm.binPath": "npm",
  "tsserver.npm": "npm",
  "eslint.packageManager": "npm",
  "eslint.autoFixOnSave": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.source": "vim-devicons",
  "explorer.datetime.format": "yy/MM/dd HH:mm:ss",
  "[reason]": {
    "coc.preferences.formatOnSave": true
  },
  "[rescript]": {
    "coc.preferences.formatOnSave": true
  },
  "languageserver": {
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": ["terraform"],
      "initializationOptions": {}
    },
    "rescript": {
      "enable": true,
      "module": "~/.vim/plugged/vim-rescript/server/out/server.js",
      "args": ["--node-ipc"],
      "filetypes": ["rescript"],
      "rootPatterns": ["bsconfig.json"]
    },
    "protobuf": {
      "enable": true,
      "filetypes": ["proto"],
      "rootPatterns": [
        "pollapo.yml",
        "pollapo.yaml",
        "buf.work.yml",
        "buf.work.yaml"
      ],
      "command": "pb",
      "args": [
        "lsp"
      ]
    },
    "ocaml": {
      "enable": true,
      "filetypes": ["ocaml"],
      "rootPatterns": [
        "dune-project",
        "dune"
      ],
      "command": "opam",
      "args": ["config", "exec", "--", "ocamllsp"]
    }
  },
  "diagnostic.filetypeMap": {
    "sh": "shellcheck",
    "bash": "shellcheck"
  },
  "snippets.ultisnips.pythonPrompt": false
}
